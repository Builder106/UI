{
  "schemaVersion": "v0",
  "root": {
    "node": "Form",
    "props": {
      "id": "signup",
      "role": "form",
      "aria": { "label": "Sign up form" },
      "layout": { "display": "stack", "direction": "vertical", "gap": 12 }
    },
    "children": [
      {
        "node": "Input",
        "props": {
          "id": "email",
          "role": "textbox",
          "aria": { "label": "Email address", "describedBy": "email-hint" },
          "dataBindings": { "value": "user.email" },
          "type": "email",
          "name": "email",
          "placeholder": "you@example.com",
          "autocomplete": "email",
          "required": true
        }
      },
      {
        "node": "Text",
        "props": {
          "id": "email-hint",
          "text": "We'll never share your email.",
          "style": { "fontSize": 12 }
        }
      },
      {
        "node": "Input",
        "props": {
          "id": "password",
          "role": "textbox",
          "aria": { "label": "Password" },
          "type": "password",
          "name": "password",
          "placeholder": "Create a password",
          "autocomplete": "new-password",
          "required": true
        }
      },
      {
        "node": "Button",
        "props": {
          "id": "submit",
          "role": "button",
          "aria": { "label": "Create account" },
          "events": [{ "type": "submit", "action": "submit:signup" }],
          "text": "Create account",
          "style": { "backgroundColor": "token(color.primary)", "color": "#fff" }
        }
      }
    ]
  }
}


