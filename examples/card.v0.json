{
  "schemaVersion": "v0",
  "root": {
    "node": "Card",
    "props": {
      "id": "feature-card",
      "layout": { "display": "stack", "direction": "vertical", "gap": 8 },
      "style": {
        "backgroundColor": "token(color.surface)",
        "borderRadius": "12px",
        "padding": 16,
        "boxShadow": "token(shadow.lg)"
      },
      "variants": {
        "primary": { "style": { "backgroundColor": "token(color.primary)", "color": "#fff" } },
        "secondary": { "style": { "backgroundColor": "token(color.secondary)", "color": "#111" } }
      },
      "responsive": {
        "sm": { "style": { "padding": 12 } },
        "md": { "style": { "padding": 16 } },
        "lg": { "style": { "padding": 24 } }
      }
    },
    "children": [
      { "node": "Image", "props": { "id": "icon", "role": "img", "aria": { "label": "Feature icon" }, "src": "/icons/feature.svg", "alt": "Feature" } },
      { "node": "Text", "props": { "id": "title", "role": "heading", "headingLevel": 3, "text": "Powerful tooling" } },
      { "node": "Text", "props": { "id": "body", "text": "Build accessible components quickly with sensible defaults." } },
      { "node": "Button", "props": { "id": "learn-more", "role": "button", "aria": { "label": "Learn more" }, "text": "Learn more" } }
    ]
  }
}


