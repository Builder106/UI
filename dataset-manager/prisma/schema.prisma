// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
model Entry {
  id           String   @id
  title        String
  url          String
  creatorName  String
  creatorHandle String?
  dribbbleUserId String?
  createdAt    DateTime @default(now())
  consent      Consent?
  downloads    Download[]
  token        Token?
}

model Consent {
  entryId    String  @id
  sentAt     DateTime?
  granted    Boolean @default(false)
  evidence   String?
  grantedAt  DateTime?
  scope      String  @default("all_shots")
  expiresAt  DateTime?
  revokedAt  DateTime?
  entry      Entry   @relation(fields: [entryId], references: [id])
}

model Download {
  id         String   @id @default(cuid())
  entryId    String
  shotId     String
  imageUrl   String
  filePath   String?
  status     String   @default("pending")
  createdAt  DateTime @default(now())
  tags       String?
  entry      Entry    @relation(fields: [entryId], references: [id])
}

model Token {
  id          String   @id @default(cuid())
  entryId     String   @unique
  provider    String   @default("dribbble")
  accessToken String
  createdAt   DateTime @default(now())
  entry       Entry    @relation(fields: [entryId], references: [id])
}
